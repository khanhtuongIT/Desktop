<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <sectionGroup name="Exceptions">
      <section name="exceptionManagement" type="Microsoft.ApplicationBlocks.ExceptionManagement.ExceptionManagerSectionHandler,Microsoft.ApplicationBlocks.ExceptionManagement" />
    </sectionGroup>
  </configSections>

  <Exceptions>
    <exceptionManagement mode="on">
      <publisher assembly="Ecm.Client.Public" type="Ecm.Client.Public.ExceptionXMLPublisher"  exceptionFormat="xml" fileName="Resources/ExceptionLog.xml"/>
    </exceptionManagement>
  </Exceptions>

</configuration>